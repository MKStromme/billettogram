<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akam.billettogram.Betaling"
    tools:showIn="@layout/activity_betaling">
    


        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/korttext"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:text="KortNr: "
            android:padding="3dip"
            android:textColor="#ffffff"/>


        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/inputtextarea"
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/kortnr"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Utløpsdato: "
        android:padding="3dip"
        android:textColor="#ffffff"
        android:layout_below="@+id/korttext"
        android:id="@+id/datotext" />


    <EditText
        android:background="@drawable/inputtextarea"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:id="@+id/expire"
        android:layout_height="50dp"
        android:layout_below="@+id/korttext"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Cvc: "
        android:padding="3dip"
        android:textColor="#ffffff"
        android:layout_below="@+id/datotext"
        android:id="@+id/cvc" />


    <EditText
        android:background="@drawable/inputtextarea"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:id="@+id/cvcedit"
        android:layout_height="50dp"
        android:layout_below="@+id/datotext"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bekreft"
        android:textColor="#ffffff"
        android:background="@drawable/backgroundtheme"
        android:id="@+id/confirmbuy"
        android:layout_below="@+id/cvc"/>


           <!--
            <TextView
                android:text="Utløpsdato: "
