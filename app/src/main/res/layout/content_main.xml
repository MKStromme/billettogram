    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-80dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        />
    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Kupong"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/backgroundtheme"
        android:id="@+id/koppong"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-60dp"
        android:layout_below="@+id/logo"
        android:onClick="openCoupon"/>


    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Kjøp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/backgroundtheme"
        android:id="@+id/buy"
        android:layout_alignTop="@+id/koppong"
        android:layout_toEndOf="@+id/koppong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mine Billetter"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginTop="-5dp"
        android:id="@+id/show"
        android:background="@drawable/backgroundtheme"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buy" />
    <ListView
        android:layout_width="300dp"
        android:id="@+id/todaylist"
        android:layout_height="150dp"
        android:background="#0088cc"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
